<div class="container mx-auto px-4 py-32">
  <h1 class="text-4xl font-mono font-bold mb-8">YOUR <span class="text-primary">CART</span></h1>

  <% if @cart_items.empty? %>
    <div class="text-center py-20 bg-white/5 border border-white/10 rounded-2xl">
      <p class="text-gray-400 text-lg mb-6">Your cart is currently empty.</p>
      <%= link_to "Start Shopping", products_path, class: "px-8 py-3 bg-primary text-black font-bold rounded-lg hover:bg-white transition-colors" %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Cart Items -->
      <div class="lg:col-span-2 space-y-4">
        <% @cart_items.each do |item| %>
          <div class="bg-white/5 border border-white/10 rounded-xl p-4 flex items-center gap-4">
            <div class="w-24 h-24 bg-gray-800 rounded-lg overflow-hidden flex-shrink-0">
              <img src="<%= product_image_url(item.product) %>" class="w-full h-full object-cover" onerror="this.onerror=null;this.src='<%= asset_path('placeholder.svg') %>';">
            </div>
            
            <div class="flex-1">
              <h3 class="font-bold text-lg mb-1"><%= item.product.title %></h3>
              <p class="text-primary font-bold"><%= format_price(item.product.price_to_display) %></p>
            </div>

            <div class="flex items-center gap-4">
              <%= form_with url: cart_item_path(item), method: :patch, class: "flex items-center gap-0 bg-black border border-white/20 rounded-lg overflow-hidden", id: "cart-form-#{item.id}" do |f| %>
                <%= f.hidden_field :quantity, value: item.quantity, id: "quantity-#{item.id}" %>
                <button type="button" onclick="updateQuantity(<%= item.id %>, -1)" class="px-3 py-2 hover:bg-white/10 transition-colors text-gray-400 hover:text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/></svg>
                </button>
                <span id="display-<%= item.id %>" class="px-4 py-2 text-center min-w-[3rem] font-medium"><%= item.quantity %></span>
                <button type="button" onclick="updateQuantity(<%= item.id %>, 1)" class="px-3 py-2 hover:bg-white/10 transition-colors text-gray-400 hover:text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
                </button>
              <% end %>
              
              <script>
                function updateQuantity(itemId, change) {
                  const input = document.getElementById('quantity-' + itemId);
                  const display = document.getElementById('display-' + itemId);
                  const form = document.getElementById('cart-form-' + itemId);
                  
                  let newValue = parseInt(input.value) + change;
                  if (newValue < 1) newValue = 1;
                  
                  input.value = newValue;
                  display.textContent = newValue;
                  form.requestSubmit();
                }
              </script>
              
              <%= button_to cart_item_path(item), method: :delete, class: "text-gray-500 hover:text-red-500 transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Summary -->
      <div class="lg:col-span-1">
        <div class="bg-white/5 border border-white/10 rounded-2xl p-6 sticky top-32">
          <h3 class="font-bold text-xl mb-6">Order Summary</h3>
          
          <div class="space-y-4 mb-6">
            <div class="flex justify-between text-gray-400">
              <span>Subtotal</span>
              <span><%= format_price(@cart.total_price) %></span>
            </div>
            <div class="flex justify-between text-gray-400">
              <span>Shipping</span>
              <span>Free</span>
            </div>
            <div class="border-t border-white/10 pt-4 flex justify-between font-bold text-lg">
              <span>Total</span>
              <span class="text-primary"><%= format_price(@cart.total_price) %></span>
            </div>
          </div>

          <%= link_to "Proceed to Checkout", new_checkout_path, class: "block w-full py-4 bg-primary text-black font-bold text-center rounded-lg hover:bg-white transition-colors" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
