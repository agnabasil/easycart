<div class="container mx-auto px-4 py-32">
  <h1 class="text-4xl font-mono font-bold mb-8 text-center">
    CONTACT <span class="text-primary">US</span>
  </h1>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
    <!-- Contact Information -->
    <div class="space-y-8">
      <div>
        <h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
        <p class="text-gray-400 mb-8">
          Have questions about our products or need assistance? We're here to help! 
          Reach out to us through any of the channels below.
        </p>
      </div>

      <!-- Address -->
      <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
        <div class="flex items-start gap-4">
          <div class="p-3 bg-primary/10 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold mb-2">Visit Us</h3>
            <p class="text-gray-400 text-sm">
              EasyCart Technologies Pvt Ltd<br>
              #42, 3rd Floor, Prestige Towers<br>
              MG Road, Bangalore - 560001<br>
              Karnataka, India
            </p>
          </div>
        </div>
      </div>

      <!-- Phone -->
      <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
        <div class="flex items-start gap-4">
          <div class="p-3 bg-primary/10 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold mb-2">Call Us</h3>
            <p class="text-gray-400 text-sm">
              +91 80 4567 8900<br>
              Mon - Sat: 9:00 AM - 6:00 PM IST
            </p>
          </div>
        </div>
      </div>

      <!-- Email -->
      <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
        <div class="flex items-start gap-4">
          <div class="p-3 bg-primary/10 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold mb-2">Email Us</h3>
            <p class="text-gray-400 text-sm">
              support@easycart.com<br>
              sales@easycart.com
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-8">
      <h2 class="text-2xl font-bold mb-6">Send us a Message</h2>
      
      <form class="space-y-6" onsubmit="handleContactSubmit(event)">
        <div>
          <label class="block text-sm text-gray-400 mb-2">Your Name</label>
          <input 
            type="text" 
            name="name"
            placeholder="John Doe" 
            required
            class="w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white"
          >
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-2">Email Address</label>
          <input 
            type="email" 
            name="email"
            placeholder="john@example.com" 
            required
            class="w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white"
          >
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-2">Phone Number</label>
          <input 
            type="tel" 
            name="phone"
            placeholder="+91 98765 43210" 
            class="w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white"
          >
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-2">Subject</label>
          <input 
            type="text" 
            name="subject"
            placeholder="How can we help you?" 
            required
            class="w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white"
          >
        </div>

        <div>
          <label class="block text-sm text-gray-400 mb-2">Message</label>
          <textarea 
            name="message"
            rows="4" 
            placeholder="Tell us more about your inquiry..." 
            required
            class="w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white"
          ></textarea>
        </div>

        <button 
          type="submit"
          class="w-full py-4 bg-primary text-black font-bold rounded-lg hover:bg-white transition-colors"
        >
          Send Message
        </button>
      </form>

      <script>
        function handleContactSubmit(event) {
          event.preventDefault();
          const form = event.target;
          const formData = new FormData(form);
          
          const message = "New Contact Form Submission:\n\n" +
            "Name: " + formData.get('name') + "\n" +
            "Email: " + formData.get('email') + "\n" +
            "Phone: " + formData.get('phone') + "\n" +
            "Subject: " + formData.get('subject') + "\n\n" +
            "Message:\n" + formData.get('message');
          
          // Redirect to WhatsApp (you can change this number)
          window.location.href = `https://wa.me/<%= ENV.fetch('ADMIN_PHONE_NUMBER', '917907542340') %>?text=${encodeURIComponent(message)}`;
        }
      </script>
    </div>
  </div>
</div>
