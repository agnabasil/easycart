<div class="container mx-auto px-4 py-32 flex justify-center">
  <div class="w-full max-w-lg">
    <h1 class="text-3xl font-mono font-bold mb-8 text-center">CHECKOUT</h1>

    <div class="bg-white/5 border border-white/10 rounded-2xl p-8">
      <%= form_with(model: @order, url: checkout_path, class: "space-y-6", data: { turbo: false }) do |f| %>
        <% if @order.errors.any? %>
          <div class="bg-red-500/10 border border-red-500/20 p-4 rounded-lg text-red-400 mb-6">
            <ul class="list-disc list-inside text-sm">
              <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :customer_name, "Full Name", class: "block text-sm text-gray-400 mb-2" %>
          <%= f.text_field :customer_name, placeholder: "John Doe", class: "w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white", required: true %>
        </div>

        <div>
          <%= f.label :phone, "Phone Number", class: "block text-sm text-gray-400 mb-2" %>
          <%= f.telephone_field :phone, placeholder: "+91 98765 43210", class: "w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white", required: true %>
        </div>

        <div>
          <%= f.label :address, "Shipping Address", class: "block text-sm text-gray-400 mb-2" %>
          <%= f.text_area :address, rows: 3, placeholder: "Enter your complete shipping address...", class: "w-full bg-black/50 border border-white/20 rounded-lg py-3 px-4 focus:outline-none focus:border-primary text-white", required: true %>
        </div>

        <div class="pt-4">
          <%= f.button class: "w-full py-4 bg-primary text-black font-bold rounded-lg hover:bg-white transition-colors flex items-center justify-center gap-2" do %>
            <span>Place Order via WhatsApp</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          <% end %>
          <p class="text-xs text-center text-gray-500 mt-4">
            You will be redirected to WhatsApp to confirm your order details.
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
